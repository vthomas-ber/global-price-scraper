<div class="card">
  <form method="post" action="/run">
    <div class="grid">
      <div>
        <label>Market</label>
        <select name="market">
          <% @markets.each do |m| %>
            <option value="<%= m %>" <%= "selected" if @market == m %>><%= m %></option>
          <% end %>
        </select>

        <div style="height:12px"></div>

        <button class="btn" type="submit">Scrape</button>
        <div class="small" style="margin-top:10px;">
          Uses SERPAPI discovery + HTML verification + Gemini extraction.
        </div>
      </div>

      <div>
        <label>EANs (max 10, one per line)</label>
        <textarea name="eans" placeholder="4003586100399&#10;..."><%= @eans_text %></textarea>
      </div>
    </div>
  </form>
</div>

<% if @results %>
  <hr />

  <% @results.each do |r| %>
    <div class="card" style="margin-bottom:14px">
      <div style="display:flex; justify-content:space-between; gap:12px; align-items:center;">
        <div class="mono"><strong>EAN:</strong> <%= r[:ean] %></div>
        <% if r[:error] %>
          <span class="badge no">ERROR</span>
        <% else %>
          <span class="badge ok">OK</span>
        <% end %>
      </div>

      <% if r[:error] %>
        <div class="small" style="margin-top:10px; color: var(--danger);"><%= r[:error] %></div>
      <% end %>

      <div class="small" style="margin-top:10px">
        <strong>Master:</strong>
        Product Name: <%= r.dig(:master, :product_name) || "-" %>;
        Unit Type: <%= r.dig(:master, :unit_type) || "-" %>;
        Grammage: <%= r.dig(:master, :grammage) || "-" %>
      </div>

      <div style="margin-top:12px">
        <table>
          <thead>
            <tr>
              <th>Vendor</th>
              <th>RSV (incl VAT)</th>
              <th>VAT</th>
              <th>Promo</th>
              <th>Flag</th>
              <th>Pack</th>
              <th>Evidence (EAN found?)</th>
              <th>URL</th>
            </tr>
          </thead>
          <tbody>
            <% if r[:rows].empty? %>
              <tr><td colspan="8" class="small">No valid rows (EAN not found in HTML or price not extractable).</td></tr>
            <% else %>
              <% r[:rows].each do |row| %>
                <tr>
                  <td><%= row[:vendor] %></td>
                  <td><%= row[:rsv] ? "#{row[:rsv]} #{row[:currency]}" : "-" %></td>
                  <td><%= row[:vat_info] || "rate not stated" %></td>
                  <td><%= row[:promo_price] || "-" %></td>
                  <td><span class="badge <%= row[:flag] == "Comparable" ? "ok" : "no" %>"><%= row[:flag] %></span></td>
                  <td><%= row[:pack_format] || "-" %></td>
                  <td><%= row[:ean_evidence] %></td>
                  <td class="mono"><a target="_blank" href="<%= row[:url] %>">open</a></td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>

      <div class="small" style="margin-top:10px">
        <strong>Average RSV:</strong>
        <%= r[:average_rsv] ? "#{r[:average_rsv]} #{r[:currency]} (N=#{r[:avg_n]})" : "-" %>
      </div>

      <% if r[:discards]&.any? %>
        <div class="small" style="margin-top:12px">
          <strong>Discards:</strong>
          <ul>
            <% r[:discards].each do |d| %>
              <li class="mono"><%= d[:url] %> â€” <%= d[:reason] %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>
  <% end %>
<% end %>
